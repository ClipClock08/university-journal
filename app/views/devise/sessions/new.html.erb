<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:role => 'form'}) do |f| %>
    <%= devise_error_messages! %>

    <div class="row">
      <div class="input-field col s12 m6">
        <%= f.email_field :email, :autofocus => true %>
        <%= f.label :email %>
      </div>
      <div class="input-field col s12 m6">
        <%= f.password_field :password %>
        <%= f.label :password %>
      </div>
    </div>

    <%= button_tag t(:sign_in), class: 'btn waves-effect waves-light', type: 'submit' %>
    <% if devise_mapping.rememberable? -%>
        <span class="remember-me-cont">
          <%= f.check_box :remember_me %>
          <label for="user_remember_me">
            Remember me
          </label>
        </span>
    <% end -%>

    <%- if devise_mapping.registerable? %>
        <%= link_to 'Sign up', new_registration_path(resource_name), class: 'btn btn-flat waves-effect waves-teal' %>
    <% end -%>

    <%- if devise_mapping.recoverable? %>
        <%= link_to "Forgot password?", new_password_path(resource_name), class: 'btn btn-flat waves-effect waves-teal' %>
    <% end -%>
<% end %>

