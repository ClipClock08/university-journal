<div class="row">
  <%= bootstrap_form_for(@user, html: {class: 'form-horizontal col-md-3 col-md-offset-1'}, url: (@user.new_record?) ? create_manual_users_path : user_path(@user)) do |f| %>
      <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

            <ul>
              <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <%= f.text_field :name %>
      <%= f.email_field :email %>
      <%
         if current_user.admin?
           roles = User.roles.keys.map { |role| [role.titleize, role] }
         else
           roles = User.roles.select { |key, value| key == 'student' }.keys.map { |role| [role.titleize, role] }
         end
      %>
      <%= f.select(:role, roles) %>
      <%= f.password_field :password %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit %>
  <% end %>
</div>