<h1><%=t(:homework)%>: <%= @visit.title %> (<small><%= @user.name %></small>)</h1>
<h2><%= @visit.relationship.discipline.title %> (<%= @visit.relationship.semester.year %>)</h2>

<table class="table">
  <thead>
  <tr>
    <th><%= t(:document) %></th>
    <th><%= t(:created_at) %></th>
    <th><%= t(:corrections) %></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @homeworks.each do |h| %>
      <tr>
        <td><%= link_to h.document_file_name, h.document.url %></td>
        <td><%= h.created_at %></td>
        <td>
          <% if current_user.admin? || current_user.teacher? %>
            form goes here
          <% else %>
            <%= (h.body.present?) ? h.body : '-' %>
          <% end %>
        </td>
        <td>
          <%= link_to fa_icon('minus-circle'), h, method: :delete, data: { confirm: t(:are_you_sure) } if current_user.teacher? || current_user.admin?%>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to t(:new) + ' ' + t(:homework), new_visit_homework_path(visit_id: @visit.id, user_id: @user.id) if current_user.student? %>