<%= form_for(attend, remote: true) do |f| %>
    <% if attend.present? %>
        <%= f.hidden_field :presence, value: 'absent' %>
        <%= link_to '*', '#', :onclick=>'$(this).parent().submit()' %>
    <% elsif attend.absent? %>
        <%= f.hidden_field :presence, value: 'late' %>
        <%= link_to 'H', '#', :onclick=>'$(this).parent().submit()' %>
    <% elsif attend.late? %>
        <%= f.hidden_field :presence, value: 'present' %>
        <%= link_to 'оп', '#', :onclick=>'$(this).parent().submit()' %>
    <% end %>
<% end %>