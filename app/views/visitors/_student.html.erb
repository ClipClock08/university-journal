<div class="row">
  <div class="col-md-6">
    <h4><%=t(:disciplines)%></h4>
    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
      <% current_user.groups.sort_by(&:year).reverse.each do |group| %>
          <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="heading<%= group.id %>">
              <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= group.id %>" aria-expanded="<%= group.year == Time.now.year %>" aria-controls="collapse<%= group.id %>">
                  <%= group.year %>
                </a>
              </h4>
            </div>
            <div id="collapse<%= group.id %>" class="panel-collapse collapse <%= 'in' if group.year == Time.now.year %>" role="tabpanel" aria-labelledby="heading<%= group.id %>">
              <div class="panel-body">
                <% group.relationships.each do |rel| %>
                    <%= link_to rel.discipline.title, relationship_path(rel) %><br/>
                <% end %>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-6">
    <h4><%=t(:homeworks)%></h4>
    <div class="panel-group" id="haccordion" role="tablist" aria-multiselectable="true">
      <% @homeworks.to_a.uniq(&:visit_id).each do |h| %>
          <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="hheading<%= h.id %>">
              <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#haccordion" href="#hcollapse<%= h.id %>" aria-controls="hcollapse<%= h.id %>">
                  <%= h.visit.relationship.discipline.title %>
                </a>
              </h4>
            </div>
            <div id="hcollapse<%= h.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="hheading<%= h.id %>">
              <div class="panel-body">
                <%= simple_format(h.body) %>
                [<%= h.updated_at %>] <%= link_to t(:view), visit_homeworks_path(visit_id: h.visit_id, user_id: current_user.id) %>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>