<div class="row">
  <div class="col-md-6">
    <% if (!current_semester.nil?) %>
        <div class="panel panel-primary">
          <div class="panel-heading"><%= t(:current) + ' ' + t(:semester) %></div>
          <div class="panel-body">
            <%= link_to current_semester.name, semester_path(current_semester) -%>
          </div>
        </div>
    <% else %>
        <%= t :no_semester_in_current_year %>
        <%= link_to t(:create) + ' ' + t(:semester), new_semester_path, class: 'btn btn-success' -%>
    <% end %>
    <% if (!@relationships.empty?) %>
        <div class="panel panel-primary">
          <div class="panel-heading"><%= t :disciplines %></div>
          <div class="panel-body">
            <% @relationships.each do |r| %>
                <%= link_to r.discipline.title << ' (' << r.group.title << ')', relationship_path(r) %> <br/>
            <% end %>
          </div>
        </div>
    <% end %>
  </div>
  <div class="col-md-6">
    <h4><%=t(:homeworks)%></h4>
    <div class="panel-group" id="haccordion" role="tablist" aria-multiselectable="true">
      <% @homeworks.to_a.uniq(&:visit_id).each do |h| %>
          <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="hheading<%= h.id %>">
              <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#haccordion" href="#hcollapse<%= h.id %>" aria-controls="hcollapse<%= h.id %>">
                  <%= h.user.name %> (<%= h.visit.relationship.group.title %>)
                  <small><%= h.visit.relationship.discipline.title %></small>
                </a>
              </h4>
            </div>
            <div id="hcollapse<%= h.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="hheading<%= h.id %>">
              <div class="panel-body">
                <%= simple_format(h.comment_text) %>
                [<%= h.created_at %>]
                <%= link_to t(:view), visit_homeworks_path(visit_id: h.visit_id, user_id: h.user_id) %>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>