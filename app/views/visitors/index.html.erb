<h3><%= t :welcome %></h3>
<% if(user_signed_in?) %>
    <% if !current_user.student? %>
        <% if (!current_semester.nil?) %>
            <div class="panel panel-primary">
              <div class="panel-heading"><%= t(:current) + ' ' + t(:semester) %></div>
              <div class="panel-body">
                <%= link_to current_semester.name, semester_path(current_semester) -%>
              </div>
            </div>
        <% else %>
            <%= t :no_semester_in_current_year %>
            <%= link_to t(:create) + ' ' + t(:semester), new_semester_path, class: 'btn btn-success' -%>
        <% end %>
        <% if (!@relationships.empty?) %>
            <div class="panel panel-primary">
              <div class="panel-heading"><%= t :disciplines %></div>
              <div class="panel-body">
                <% @relationships.each do |r| %>
                    <%= link_to r.discipline.title << ' (' << r.group.title << ')' , relationship_path(r) %> <br />
                <% end %>
              </div>
            </div>
        <% end %>
    <% else %>
        <%= render 'student' %>
    <% end %>
<% else %>
    <%= t :please %> <%= link_to t(:sign_in), new_user_session_path %> to view your Journal.
<% end %>