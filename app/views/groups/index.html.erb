<h1><%= t(:groups) %></h1>
<%= link_to t(:new) + ' ' + t(:group), new_group_path, class: 'btn btn-success'  %>

<table class="table">
  <thead>
    <tr>
      <th><%= t(:title) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.title_year %></td>
        <td><%= link_to t(:show), group %></td>
        <td><%= link_to t(:edit), edit_group_path(group) %></td>
        <td><%= link_to t(:delete), group, method: :delete, data: { confirm: t(:are_you_sure) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>