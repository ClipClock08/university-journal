<div class="card hoverable">
  <div class="card-content">
    <span class="card-title black-text"><%= @group.title_year %></span>
  </div>
  <div class="card-action">
    <%= link_to t(:edit), edit_group_path(@group) %>
    <%= link_to t(:back), groups_path %>
  </div>
</div>

<div class="row">
  <div class="col m4 s12">
    <%= render 'student_form'%>
  </div>
  <div class="col m8 s12">
    <ul class="collection with-header">
      <li class="collection-header"><h4><%= t(:students) %></h4></li>
      <% @group.users.order(name: :asc).all.each do |student|%>
          <li class="collection-item">
            <div>
              <%= link_to student.name, student %>
              <%= link_to raw('<i class="material-icons">delete</i>'), remove_user_group_path(user_id: student.id), method: :delete, data: {confirm: t(:are_you_sure) + ' ' + t(:all_marks_will_be_lost)}, class: 'secondary-content', title: t(:delete) %>
            </div>
          </li>
      <% end %>
    </ul>
  </div>
</div>