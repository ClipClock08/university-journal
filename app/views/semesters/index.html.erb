<h1><%= t(:semesters) %></h1>

<%= link_to t(:new) + ' ' + t(:semester), new_semester_path, class: 'btn btn-success' %>

<table class="table">
  <thead>
  <tr>
    <th>Year</th>
    <th>Pos</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @semesters.each do |semester| %>
      <tr>
        <td><%= semester.year %></td>
        <td><%= semester.pos %></td>
        <td><%= link_to t(:show), semester %></td>
        <td><%= link_to t(:edit), edit_semester_path(semester) %></td>
        <td><%= link_to t(:delete), semester, method: :delete, data: {confirm: t(:are_you_sure)} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= will_paginate %>
