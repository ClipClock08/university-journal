<h1>Semesters</h1>

<%= link_to 'New Semester', new_semester_path, class: 'btn btn-success' %>

<table class="table">
  <thead>
  <tr>
    <th>Year</th>
    <th>Pos</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @semesters.each do |semester| %>
      <tr>
        <td><%= semester.year %></td>
        <td><%= semester.pos %></td>
        <td><%= link_to 'Show', semester %></td>
        <td><%= link_to 'Edit', edit_semester_path(semester) %></td>
        <td><%= link_to 'Destroy', semester, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= will_paginate %>
