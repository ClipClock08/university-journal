<div class="card hoverable">
  <div class="card-content">
    <span class="card-title black-text"><%= @semester.name %></span>
  </div>
  <div class="card-action">
    <%= link_to t(:edit), edit_semester_path(@semester) %>
    <%= link_to t(:back), semesters_path %>
  </div>
</div>

<div class="row">
  <div class="col m4 s12">
    <%= render 'relation', semester: @semester %>
  </div>
  <div class="col m8 s12">
    <ul class="collection with-header">
      <li class="collection-header"><h4><%= t(:disciplines) %></h4></li>
      <% @semester.relationships.all.each do |relationship|%>
          <li class="collection-item avatar">
            <i class="material-icons circle green">insert_chart</i>
            <span class="title"><%= link_to relationship.discipline.title, relationship.discipline %></span>
            <p>
              <%= link_to relationship.group.title_year, relationship.group %>
              <br>
              <%= relationship.discipline.user.name %>
            </p>
              <%= link_to raw('<i class="material-icons">delete</i>'), relationship, method: :delete, data: {confirm: t(:are_you_sure) + ' ' + t(:all_marks_will_be_lost)}, class: 'secondary-content', title: t(:delete) %>
          </li>
      <% end %>
    </ul>
  </div>
</div>