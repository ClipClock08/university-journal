<div class="card hoverable">
  <div class="card-content">
    <span class="card-title black-text"><%= t(:disciplines) %></span>
    <p>
      <%= link_to t(:new) + ' ' + t(:discipline), new_discipline_path, class: 'btn waves-effect waves-light' %>
    </p>
  </div>
</div>

<table class="striped">
  <thead>
    <tr>
      <th><%= t(:title) %></th>
      <th><%= t(:teacher) %></th>
      <th><%= t(:actions) %></th>
    </tr>
  </thead>

  <tbody>
    <% @disciplines.each do |discipline| %>
      <tr>
        <td><%= discipline.title %></td>
        <td><%= discipline.user.name %></td>
        <td>
          <%= link_to raw('<i class="fa fa-eye"></i>'), discipline, title: t(:show) %>
          <%= link_to raw('<i class="fa fa-pencil"></i>'), edit_discipline_path(discipline), title: t(:edit) %>
          <%= link_to raw('<i class="fa fa-trash"></i>'), discipline, method: :delete, data: {confirm: t(:are_you_sure)}, title: t(:delete) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>