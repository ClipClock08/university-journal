<h1><%= t(:disciplines) %></h1>
<%= link_to t(:new) + ' ' + t(:discipline), new_discipline_path, class: 'btn btn-success' %>

<table class="table">
  <thead>
    <tr>
      <th><%= t(:title) %></th>
      <th><%= t(:teacher) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @disciplines.each do |discipline| %>
      <tr>
        <td><%= discipline.title %></td>
        <td><%= discipline.user.name %></td>
        <td><%= link_to t(:show), discipline %></td>
        <td><%= link_to t(:edit), edit_discipline_path(discipline) %></td>
        <td><%= link_to t(:delete), discipline, method: :delete, data: { confirm: t(:are_you_sure) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>